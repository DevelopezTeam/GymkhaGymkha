<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Orange_Theme" parent="Base.Orange_Theme">

    </style>

    <style name="Base.Orange_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_orange_500</item>
        <item name="colorPrimaryDark">@color/md_orange_300</item>
        <item name="colorAccent">@color/md_red_500</item>
        <item name="colorControlHighlight">@color/md_indigo_500_25</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="ToolbarThemeOrange" parent="Orange_Theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/md_orange_500</item>
    </style>

    <style name="NavigationViewThemeOrange" parent="Orange_Theme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
    <style name="Orange_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Orange_Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
