<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Red_Theme" parent="Base.Red_Theme">

    </style>

    <style name="Base.Red_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_red_500</item>
        <item name="colorPrimaryDark">@color/md_red_300</item>
        <item name="colorAccent">@color/md_purple_500</item>
        <item name="colorControlHighlight">@color/md_indigo_500_25</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="ToolbarThemeRed" parent="Red_Theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/md_red_500</item>
    </style>

    <style name="NavigationViewThemeRed" parent="Red_Theme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
    <style name="Red_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
