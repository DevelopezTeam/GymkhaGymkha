<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Green_Theme" parent="Base.Green_Theme">

    </style>

    <style name="Base.Green_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_300</item>
        <item name="colorAccent">@color/md_orange_500</item>
        <item name="colorControlHighlight">@color/md_indigo_500_25</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="ToolbarThemeGreen" parent="Green_Theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/md_orange_500</item>
    </style>

    <style name="NavigationViewThemeGreen" parent="Green_Theme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
    <style name="Green_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Green_Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
