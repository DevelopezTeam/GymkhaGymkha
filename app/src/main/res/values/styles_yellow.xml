<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Yellow_Theme" parent="Base.Yellow_Theme">

    </style>

    <style name="Base.Yellow_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_yellow_700</item>
        <item name="colorPrimaryDark">@color/md_yellow_800</item>
        <item name="colorAccent">@color/md_red_500</item>
        <item name="colorControlHighlight">@color/md_indigo_500_25</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="ToolbarThemeYellow" parent="Yellow_Theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/md_yellow_400</item>
    </style>

    <style name="NavigationViewThemeYellow" parent="Yellow_Theme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
    <style name="Yellow_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Yellow_Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
