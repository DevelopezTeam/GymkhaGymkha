<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="@bool/fitsSystemWindows">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAjustes"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarThemeBlue"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView4"
        android:layout_gravity="center_horizontal|top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <Button
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar de tema"
            android:id="@+id/btnCambiarTema"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal|top"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_indigo_500"
            android:onClick="cambiarTheme"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar imagen de fondo"
            android:id="@+id/btnInsertarBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_indigo_500"
            android:layout_gravity="center_horizontal"
            android:onClick="cambiarBackground" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
